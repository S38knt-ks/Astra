<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuide4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuide5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuide6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/circle"
        android:tint="@color/star1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontalGuide1" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/circle"
        android:tint="@color/star2"
        app:layout_constraintBottom_toBottomOf="@id/horizontalGuide1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/circle"
        android:tint="@color/star2"
        app:layout_constraintBottom_toBottomOf="@id/horizontalGuide2"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/circle"
        android:tint="@color/star3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontalGuide2" />

    <ImageView
        android:id="@+id/image5"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/circle"
        android:tint="@color/star1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontalGuide2" />

    <ImageView
        android:id="@+id/image6"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/circle"
        android:tint="@color/star1"
        app:layout_constraintBottom_toBottomOf="@id/horizontalGuide3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image7"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/circle"
        android:tint="@color/star2"
        app:layout_constraintBottom_toBottomOf="@id/horizontalGuide4"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image8"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/circle"
        android:tint="@color/star3"
        app:layout_constraintBottom_toBottomOf="@id/horizontalGuide5"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/image9"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/circle"
        android:tint="@color/star3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontalGuide5" />

    <ImageView
        android:id="@+id/image10"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/circle"
        android:tint="@color/star3"
        app:layout_constraintBottom_toBottomOf="@id/horizontalGuide6"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/image11"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/circle"
        android:tint="@color/star3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontalGuide6" />

    <ImageView
        android:id="@+id/image12"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/circle"
        android:tint="@color/star1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image13"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/circle"
        android:tint="@color/star2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>